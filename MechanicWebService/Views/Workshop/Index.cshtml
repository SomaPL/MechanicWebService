@model IEnumerable<MechanicWebService.Models.ServiceRequest>;
@{
    ViewData["Title"] = "Workshop";
}

<div class="text-center">
    <h1 class="display-6">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success">Dodaj nowego studenta</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Model)</th>
            <th>@Html.DisplayNameFor(model => model.Mark)</th>
            <th>@Html.DisplayNameFor(model => model.VIN)</th>
            <th>@Html.DisplayNameFor(model => model.Year)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ServiceRequest item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Model
                </td>
                <td>
                    @item.Mark
                </td>
                <td>
                    @item.VIN
                </td>
                <td>
                    @item.Year
                </td>
                <td>
                    <a asp-action="Show" asp-route-id="@item.Id">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>