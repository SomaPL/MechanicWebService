@model IEnumerable<MechanicWebService.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1>Płatności</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Dodaj Płatność</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reservation.ReservationId)
            </td>
            <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.PaymentId">Edytuj</a>
                    }
                 
                    <a asp-action="Details" asp-route-id="@item.PaymentId">Detale</a>
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.PaymentId">Usuń</a>
                    }
                
            </td>
        </tr>
}
    </tbody>
</table>
